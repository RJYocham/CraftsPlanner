@model IEnumerable<CraftsPlanner.Models.CategoryGroup.CGroupListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("+Group", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert=success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<table class="table table-hover">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.CGroupId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.CGroupName)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.CGroupId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CGroupName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CGroupId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CGroupId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CGroupId })
            </td>
        </tr>
    }

</table>
